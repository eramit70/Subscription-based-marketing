@model Subscription_based_marketing.DTO.UserDto
@{
    ViewData["Title"] = "UserUpdate";
    Layout = "~/Views/Shared/_PremiumDash.cshtml";
}

<h1>UserUpdate</h1>

<h4>UserAccount</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UserUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserID" />
            <input type="hidden" asp-for="UserEmailAddress" />
            <input type="hidden" asp-for="UserPassword" />
            <input type="hidden" asp-for="UserLastLoginDate" />
            <input type="hidden" asp-for="AccountCreationDate" />


            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" readonly />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" value=" " class="form-control" />
               
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" value=" " class="form-control" />
              
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" /> |  <a asp-action="PremiumDashBoard"  class="btn btn-outline-secondary">Back</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

