@model Subscription_based_marketing.DTO.UserDto
@{
    ViewData["Title"] = "UserDetails";
    Layout = "~/Views/Shared/_PremiumDash.cshtml";
}

<h1>UserDetails</h1>

<div>
    <h4>UserAccount</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserEmailAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserEmailAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        @if(Model.State != ""){
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        }
        @if(Model.City != ""){
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AccountCreationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AccountCreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserLastLoginDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserLastLoginDate)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="UserUpdate" asp-route-id="@Model?.UserID" class="btn btn-outline-secondary">Update</a>  |  <a asp-action="PremiumDashBoard" class="btn btn-outline-secondary">Back</a>


</div>

