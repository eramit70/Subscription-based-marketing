@model Subscription_based_marketing.DTO.SellerDto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_SellerLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>SellerAccount</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SellerUserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellerUserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SellerEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellerEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SellerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SellerDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellerDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SellerPhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellerPhoneNumber)
        </dd>
        <dt class = "col-sm-2">
           Creation Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellerAccountCreationDate)
        </dd>
        <dt class = "col-sm-2">
           Last Login Date
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SellerLastLoginDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Update" asp-controller="SellerAccount" asp-route-id="@Model?.SellerID" class="btn btn-outline-warning">Update Profile</a> |

    <a asp-action="ServiceList" asp-controller="ServiceDetails" class="btn btn-outline-secondary">Back to DashBoard</a>
</div>
